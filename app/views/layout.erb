  </head>
  <body>

    <div class="wrapper">
    <img src="/images/savingshomepage.jpg" style="width: 100%; height: 300px;">
    
    <% if flash[:error] %>
    <h3 style="color:red;"><%= flash[:error] %></h3>
    <% end %>

    <% if flash[:message] %>
   <h3 style="color:blue;"><%= flash[:message] %></h3>
    <% end %> 

    <div class="navi">
      <%if logged_in? %>
        <a href="/coupons">Coupon Showcase</a>
        <a href="/coupons/new">New Coupon</a>
        <a href="/coupons/savings">Big Savings</a>
        <a href="/users/<%=current_user.id%>"> Home</a>
        <a href="/logout">Log Out</a>
      <% end %>


        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>CouponShowcaseSinatraApp</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
